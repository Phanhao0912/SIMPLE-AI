# Import th∆∞ vi·ªán
import os
import cv2
import shutil
import matplotlib.pyplot as plt
from ultralytics import YOLO
from ultralytics.utils import SETTINGS

# Thi·∫øt l·∫≠p m√¥i tr∆∞·ªùng
os.environ['YOLO_CACHE_DIR'] = '/kaggle/working/yolo_cache'
SETTINGS.update({'runs_dir': '/kaggle/working/ultralytics_logs'})

# ƒê∆∞·ªùng d·∫´n c·∫ßn thi·∫øt
bowl_crop_dir = "/kaggle/working/bowls_cropped"
dish_crop_dir = "/kaggle/working/dishes_cropped"
image_path = "/kaggle/input/foodtestproject/z6582828766338_58b7500b77e640b493268491c92456e0.jpg" -> #·∫¢nh th·ª≠ 
image_name = os.path.splitext(os.path.basename(image_path))[0]

# X√≥a d·ªØ li·ªáu c≈©
for path in [bowl_crop_dir, dish_crop_dir]:
    shutil.rmtree(path, ignore_errors=True)
    os.makedirs(path, exist_ok=True)

# Load m√¥ h√¨nh YOLO
bowl_model = YOLO(shutil.copy("/kaggle/input/allmodeltrain/yolo11n.pt", "/kaggle/working/yolo11n.pt"))
dish_model = YOLO(shutil.copy("/kaggle/input/allmodeltrain/model.pt", "/kaggle/working/model.pt"))

# ƒê·ªçc ·∫£nh khay g·ªëc
img = cv2.imread(image_path)

# PH·∫¶N 1: Ph√°t hi·ªán & crop c√°c m√≥n ƒÉn t·ª´ ·∫£nh khay

bowl_results = bowl_model.predict(source=image_path, conf=0.3)

print("üîç ƒê√£ ph√°t hi·ªán c√°c m√≥n ƒÉn:")
for r in bowl_results:
    for idx, box in enumerate(r.boxes):
        cls_id = int(box.cls[0])
        class_name = bowl_model.names[cls_id].lower()
        conf = float(box.conf[0])

        if "bowl" not in class_name:
            continue

        # Crop ·∫£nh t√¥
        x1, y1, x2, y2 = map(int, box.xyxy[0])
        crop = img[y1:y2, x1:x2]
        crop_name = f"{image_name}_bowl_{idx}_conf{conf:.2f}.jpg"
        crop_path = os.path.join(bowl_crop_dir, crop_name)
        cv2.imwrite(crop_path, crop)

        # Hi·ªÉn th·ªã
        plt.figure(figsize=(4, 4))
        plt.imshow(cv2.cvtColor(crop, cv2.COLOR_BGR2RGB))
        plt.title(f" Object #{idx+1} | Conf: {conf:.2f}")
        plt.axis("off")
        plt.show()

# PH·∫¶N 2: Ph√°t hi·ªán & crop c√°c m√≥n ƒÉn t·ª´ ·∫£nh khay

print("\nüçΩÔ∏è ƒêang nh·∫≠n di·ªán m√≥n ƒÉn trong t·ª´ng object...")

for fname in sorted(os.listdir(bowl_crop_dir)):
    if not fname.lower().endswith(('.jpg', '.jpeg', '.png')):
        continue

    bowl_path = os.path.join(bowl_crop_dir, fname)
    bowl_img = cv2.imread(bowl_path)
    bowl_name = os.path.splitext(fname)[0]

    dish_results = dish_model.predict(source=bowl_path, conf=0.3)

    for r in dish_results:
        for idx, box in enumerate(r.boxes):
            cls_id = int(box.cls[0])
            class_name = dish_model.names[cls_id]
            conf = float(box.conf[0])

            # Crop ·∫£nh m√≥n
            x1, y1, x2, y2 = map(int, box.xyxy[0])
            crop = bowl_img[y1:y2, x1:x2]
            crop_name = f"{bowl_name}_dish_{class_name}_{idx}_conf{conf:.2f}.jpg"
            crop_path = os.path.join(dish_crop_dir, crop_name)
            cv2.imwrite(crop_path, crop)

            # Hi·ªÉn th·ªã ·∫£nh m√≥n
            plt.figure(figsize=(4, 4))
            plt.imshow(cv2.cvtColor(crop, cv2.COLOR_BGR2RGB))
            plt.title(f"üçΩÔ∏è M√≥n: {class_name} | Conf: {conf:.2f}")
            plt.axis("off")
            plt.show()

# Import th∆∞ vi·ªán c·∫ßn thi·∫øt
import gradio as gr
import tensorflow as tf
from tensorflow.keras.models import load_model
from tensorflow.keras.preprocessing import image
import numpy as np
import os
import json
from PIL import Image

# C·∫•u h√¨nh TensorFlow kh√¥ng d√πng GPU (tr√°nh l·ªói CuDNN)
tf.config.set_visible_devices([], 'GPU')

# Load model CNN v√† menu gi√° 
model_path = "/kaggle/input/allmodeltrain/best_food_model.keras"
menu_path = "/kaggle/input/menuueh/menu.json"
dish_dir = "/kaggle/working/dishes_cropped" 

cnn_model = load_model(model_path)

with open(menu_path, "r", encoding="utf-8") as f:
    menu = json.load(f)

# Danh s√°ch l·ªõp theo th·ª© t·ª± training
class_names = list(menu.keys())

# H√†m nh·∫≠n di·ªán to√†n b·ªô ·∫£nh trong th∆∞ m·ª•c
def process_all_dishes(_):
    results = []
    total_price = 0
    dish_images = []

    for fname in sorted(os.listdir(dish_dir)):
        if not fname.lower().endswith(('.jpg', '.jpeg', '.png')):
            continue

        # ƒê·ªçc ·∫£nh v√† ti·ªÅn x·ª≠ l√Ω
        img_path = os.path.join(dish_dir, fname)
        img = image.load_img(img_path, target_size=(224, 224))
        img_array = image.img_to_array(img)
        img_array = np.expand_dims(img_array, axis=0) / 255.0

        # D·ª± ƒëo√°n m√≥n ƒÉn
        pred = cnn_model.predict(img_array, verbose=0)
        cls_index = np.argmax(pred)
        cls_name = class_names[cls_index]
        price = menu.get(cls_name, 0)
        total_price += price

        # Ghi nh·∫≠n k·∫øt qu·∫£
        results.append((cls_name, price))
        dish_images.append((Image.open(img_path), f"üçΩÔ∏è {cls_name} ‚Äì {price:,} VND"))

    # T·∫°o h√≥a ƒë∆°n
    receipt = "<b>===== üßæ H√ìA ƒê∆†N =====</b><br>"
    for name, price in results:
        receipt += f"<div style='display:flex; justify-content:space-between;'><span>{name}</span><span>{price:,} VND</span></div><br>"
    receipt += "<hr>"
    receipt += f"<b>T·ªîNG TI·ªÄN PH·∫¢I TR·∫¢: {total_price:,} VND</b>"

    # Tr·∫£ v·ªÅ ·∫£nh, label v√† h√≥a ƒë∆°n
    if dish_images:
        imgs, labels = zip(*dish_images)
    else:
        imgs, labels = [], []

    label_text = "\n".join(labels)
    return list(imgs), label_text, receipt

# T√πy ch·ªânh giao di·ªán Gradio
custom_theme = gr.themes.Soft(
    primary_hue="emerald",
    secondary_hue="gray"
)

demo = gr.Interface(
    fn=process_all_dishes,
    inputs=gr.Button("üì§ NH·∫¨N DI·ªÜN T·∫§T C·∫¢ M√ìN", elem_classes="btn-primary"),
    outputs=[
        gr.Gallery(label="üì∑ ·∫¢nh c√°c m√≥n ƒÉn ƒë√£ ph√°t hi·ªán", columns=3, height="auto"),
        gr.Textbox(label="üìã Danh s√°ch m√≥n v√† gi√°", lines=6),
        gr.HTML(label="üßæ H√≥a ƒë∆°n t·ªïng k·∫øt")
    ],
    title="ü•ó H·ªÜ TH·ªêNG NH·∫¨N DI·ªÜN M√ìN ƒÇN CƒÇN TIN",
    description="üöÄ H·ªá th·ªëng AI t·ª± ƒë·ªông ph√¢n lo·∫°i c√°c m√≥n ƒÉn ƒë√£ ƒë∆∞·ª£c c·∫Øt t·ª´ ·∫£nh khay b·∫±ng YOLOv8, sau ƒë√≥ s·ª≠ d·ª•ng m√¥ h√¨nh CNN ƒë·ªÉ nh·∫≠n di·ªán v√† t√≠nh t·ªïng h√≥a ƒë∆°n t·ª´ file <code>menu.json</code>.",
    theme=custom_theme,
    live=False
)

# Ch·∫°y giao di·ªán
demo.launch(debug=False, share=True)
